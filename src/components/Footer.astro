---
// src/components/Footer.astro
const currentYear = new Date().getFullYear();

const footerLinks = {
  poradniki: [
    { href: '/poradniki/wstep/', label: 'Jak napisać wstęp' },
    { href: '/poradniki/zakonczenie/', label: 'Jak napisać zakończenie' },
    { href: '/poradniki/bibliografia/', label: 'Bibliografia' },
    { href: '/poradniki/metodologia/', label: 'Metodologia badań' },
    { href: '/poradniki/obrona/', label: 'Obrona pracy' },
  ],
  tematy: [
    { href: '/tematy/pedagogika/', label: 'Pedagogika' },
    { href: '/tematy/zarzadzanie/', label: 'Zarządzanie' },
    { href: '/tematy/psychologia/', label: 'Psychologia' },
    { href: '/tematy/prawo/', label: 'Prawo' },
    { href: '/tematy/marketing/', label: 'Marketing' },
  ],
  polecane: [
    { href: 'https://www.praca-magisterska.pl/sklep/praca-magisterska-ebook/', label: 'Praca magisterska ebook PDF', external: false },
    { href: 'https://www.praca-magisterska.pl/sklep/praca-licencjacka-ebook/', label: 'Praca licencjacka ebook PDF', external: false },
    
  ],
};
---

<footer class="bg-gray-900 text-gray-300">
  <!-- Main Footer -->
  <div class="container-custom py-16">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12">
      <!-- Brand -->
      <div class="lg:col-span-1">
        <a href="/" class="flex items-center gap-3 mb-4">
          <div class="w-10 h-10 bg-gradient-to-br from-primary-500 to-accent rounded-xl flex items-center justify-center">
            <span class="text-white font-bold text-lg">PM</span>
          </div>
          <div>
            <div class="flex items-baseline">
              <span class="font-heading font-bold text-white text-lg">Praca-Magisterska</span>
              <span class="text-primary-400 font-bold">.pl</span>
            </div>
            <div class="text-xs text-gray-500 font-medium -mt-0.5">Jak napisać pracę magisterską</div>
          </div>
        </a>
        <p class="text-gray-400 text-sm leading-relaxed mb-6">
          Kompletny poradnik pisania prac magisterskich. Tematy, metodologia, struktura i profesjonalne wskazówki dla studentów.
        </p>
        <div class="flex items-center gap-3">
          <a 
            href="https://smart-edu.ai" 
            target="_blank"
            rel="noopener noreferrer"
            class="px-4 py-2 bg-gradient-to-r from-primary-600 to-accent text-white text-sm font-medium rounded-lg hover:opacity-90 transition-opacity"
          >
            Napisz pracę z AI →
          </a>
        </div>
      </div>
      
      <!-- Poradniki -->
      <div>
        <h3 class="text-white font-bold mb-4">Poradniki</h3>
        <ul class="space-y-3">
          {footerLinks.poradniki.map(link => (
            <li>
              <a 
                href={link.href}
                class="text-gray-400 hover:text-white transition-colors text-sm"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- Tematy prac -->
      <div>
        <h3 class="text-white font-bold mb-4">Tematy prac</h3>
        <ul class="space-y-3">
          {footerLinks.tematy.map(link => (
            <li>
              <a 
                href={link.href}
                class="text-gray-400 hover:text-white transition-colors text-sm"
              >
                {link.label}
              </a>
            </li>
          ))}
          <li>
            <a 
              href="/tematy/"
              class="text-primary-400 hover:text-primary-300 transition-colors text-sm font-medium"
            >
              Wszystkie kierunki →
            </a>
          </li>
        </ul>
      </div>
      
      <!-- Polecane strony -->
      <div>
        <h3 class="text-white font-bold mb-4">Sklep</h3>
        <ul class="space-y-3">
          {footerLinks.polecane.map(link => (
            <li>
              <a 
                href={link.href}
                target={link.external ? '_blank' : undefined}
                rel={link.external ? 'noopener noreferrer' : undefined}
                class="text-gray-400 hover:text-white transition-colors text-sm flex items-center gap-1"
              >
                {link.label}
                {link.external && (
                  <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                  </svg>
                )}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>
  </div>
  
  <!-- Bottom Bar -->
  <div class="border-t border-gray-800">
    <div class="container-custom py-6">
      <div class="flex flex-col md:flex-row items-center justify-between gap-4">
        <p class="text-gray-500 text-sm">
          © {currentYear} Praca-Magisterska.pl. Wszelkie prawa zastrzeżone.
        </p>
        <div class="flex flex-wrap items-center justify-center gap-4 md:gap-6">
          <a href="/polityka-prywatnosci/" class="text-gray-500 hover:text-gray-300 text-sm transition-colors">
            Polityka prywatności
          </a>
          <button 
            onclick="openCookieSettings()"
            class="text-gray-500 hover:text-gray-300 text-sm transition-colors cursor-pointer"
          >
            Ustawienia cookies
          </button>
          <span class="text-gray-600 text-sm">
            Realizacja: <a href="https://torweb.pl" target="_blank" rel="noopener noreferrer" class="text-primary-400 hover:text-primary-300 transition-colors">TorWeb.pl</a>
          </span>
        </div>
      </div>
    </div>
  </div>
</footer>