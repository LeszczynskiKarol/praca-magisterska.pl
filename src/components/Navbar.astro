---
// src/components/Navbar.astro
const currentPath = Astro.url.pathname;

const navLinks = [
  { href: '/', label: 'Start' },
  { href: '/poradniki/', label: 'Poradniki' },
  { href: '/tematy/', label: 'Tematy prac' },
];

const shopLinks = [
  { href: '/sklep/praca-magisterska-ebook/', label: 'ðŸŽ“ Ebook Magisterka', desc: 'Jak napisaÄ‡ pracÄ™ magisterskÄ…' },
  { href: '/sklep/praca-licencjacka-ebook/', label: 'ðŸ“˜ Ebook Licencjat', desc: 'Jak napisaÄ‡ pracÄ™ licencjackÄ…' },
];

const isActive = (href: string) => {
  if (href === '/') return currentPath === '/';
  return currentPath.startsWith(href);
};

const isShopActive = currentPath.startsWith('/sklep');
---

<nav class="fixed left-0 right-0 z-50 bg-white/95 backdrop-blur-md border-b border-gray-100 transition-all duration-300" id="navbar" style="top: var(--top-banner-height, 0px);">
  <div class="container-custom">
    <div class="flex items-center justify-between h-16 md:h-20">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-3 group">
        <div class="w-10 h-10 bg-gradient-to-br from-primary-600 to-accent rounded-xl flex items-center justify-center shadow-lg group-hover:shadow-xl transition-shadow">
          <span class="text-white font-bold text-lg">PM</span>
        </div>
        <div class="hidden sm:block">
          <div class="flex items-baseline">
            <span class="font-heading font-bold text-gray-900 text-lg">Praca-Magisterska</span>
            <span class="text-primary-600 font-bold">.pl</span>
          </div>
          <div class="text-xs text-gray-500 font-medium -mt-0.5">Jak napisaÄ‡ pracÄ™ magisterskÄ…</div>
        </div>
      </a>
      
      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center gap-1">
        {navLinks.map(link => (
          <a 
            href={link.href}
            class={`px-4 py-2 rounded-lg font-medium transition-all duration-200 ${
              isActive(link.href)
                ? 'bg-primary-100 text-primary-700'
                : 'text-gray-600 hover:text-primary-600 hover:bg-gray-50'
            }`}
          >
            {link.label}
          </a>
        ))}
        
        <!-- Sklep Dropdown -->
        <div class="relative" id="shop-dropdown">
          <button 
            id="shop-dropdown-btn"
            class={`px-4 py-2 rounded-lg font-medium transition-all duration-200 flex items-center gap-1 ${
              isShopActive
                ? 'bg-primary-100 text-primary-700'
                : 'text-gray-600 hover:text-primary-600 hover:bg-gray-50'
            }`}
          >
            <span>Sklep</span>
            <svg class="w-4 h-4 transition-transform duration-200" id="shop-dropdown-arrow" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </button>
          
          <!-- Dropdown Menu -->
          <div 
            id="shop-dropdown-menu"
            class="absolute top-full left-0 mt-2 w-72 bg-white rounded-xl shadow-xl border border-gray-100 py-2 opacity-0 invisible translate-y-2 transition-all duration-200"
          >
            {shopLinks.map(link => (
              <a 
                href={link.href}
                class="block px-4 py-3 hover:bg-gray-50 transition-colors"
              >
                <div class="font-medium text-gray-900">{link.label}</div>
                <div class="text-sm text-gray-500">{link.desc}</div>
              </a>
            ))}
          </div>
        </div>
      </div>
      
      <!-- CTA Button -->
      <div class="hidden md:flex items-center gap-4">
        <a 
          href="https://smart-edu.ai" 
          target="_blank"
          rel="noopener noreferrer"
          class="btn-primary text-sm"
        >
          <span>Napisz pracÄ™ z AI</span>
          <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
          </svg>
        </a>
      </div>
      
      <!-- Mobile Menu Button -->
      <button 
        id="mobile-menu-btn"
        class="md:hidden p-2 rounded-lg hover:bg-gray-100 transition-colors"
        aria-label="Menu"
      >
        <svg class="w-6 h-6 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24" id="menu-icon">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
        <svg class="w-6 h-6 text-gray-700 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24" id="close-icon">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>
  </div>
  
  <!-- Mobile Menu -->
  <div id="mobile-menu" class="md:hidden hidden bg-white border-t border-gray-100">
    <div class="container-custom py-4 space-y-2">
      {navLinks.map(link => (
        <a 
          href={link.href}
          class={`block px-4 py-3 rounded-lg font-medium transition-all ${
            isActive(link.href)
              ? 'bg-primary-100 text-primary-700'
              : 'text-gray-600 hover:bg-gray-50'
          }`}
        >
          {link.label}
        </a>
      ))}
      
      <!-- Mobile Sklep Section -->
      <div class="border-t border-gray-100 pt-2 mt-2">
        <div class="px-4 py-2 text-sm font-semibold text-gray-500 uppercase tracking-wide">Sklep</div>
        {shopLinks.map(link => (
          <a 
            href={link.href}
            class={`block px-4 py-3 rounded-lg transition-all ${
              currentPath === link.href
                ? 'bg-primary-100 text-primary-700'
                : 'text-gray-600 hover:bg-gray-50'
            }`}
          >
            <div class="font-medium">{link.label}</div>
            <div class="text-sm text-gray-500">{link.desc}</div>
          </a>
        ))}
      </div>
      
      <div class="pt-4 border-t border-gray-100">
        <a 
          href="https://smart-edu.ai" 
          target="_blank"
          rel="noopener noreferrer"
          class="btn-primary w-full text-center"
        >
          Napisz pracÄ™ z AI â†’
        </a>
      </div>
    </div>
  </div>
</nav>

<script>
  // Mobile menu toggle
  const mobileMenuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  const menuIcon = document.getElementById('menu-icon');
  const closeIcon = document.getElementById('close-icon');
  
  mobileMenuBtn?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
    menuIcon?.classList.toggle('hidden');
    closeIcon?.classList.toggle('hidden');
  });
  
  // Desktop Shop dropdown
  const shopDropdownBtn = document.getElementById('shop-dropdown-btn');
  const shopDropdownMenu = document.getElementById('shop-dropdown-menu');
  const shopDropdownArrow = document.getElementById('shop-dropdown-arrow');
  const shopDropdown = document.getElementById('shop-dropdown');
  
  let isDropdownOpen = false;
  
  function openDropdown() {
    shopDropdownMenu?.classList.remove('opacity-0', 'invisible', 'translate-y-2');
    shopDropdownMenu?.classList.add('opacity-100', 'visible', 'translate-y-0');
    shopDropdownArrow?.classList.add('rotate-180');
    isDropdownOpen = true;
  }
  
  function closeDropdown() {
    shopDropdownMenu?.classList.add('opacity-0', 'invisible', 'translate-y-2');
    shopDropdownMenu?.classList.remove('opacity-100', 'visible', 'translate-y-0');
    shopDropdownArrow?.classList.remove('rotate-180');
    isDropdownOpen = false;
  }
  
  shopDropdownBtn?.addEventListener('click', (e) => {
    e.stopPropagation();
    if (isDropdownOpen) {
      closeDropdown();
    } else {
      openDropdown();
    }
  });
  
  document.addEventListener('click', (e) => {
    if (!shopDropdown?.contains(e.target as Node)) {
      closeDropdown();
    }
  });
  
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape') {
      closeDropdown();
    }
  });
  
  // Navbar shadow on scroll
  const navbar = document.getElementById('navbar');
  window.addEventListener('scroll', () => {
    if (window.scrollY > 10) {
      navbar?.classList.add('shadow-md');
    } else {
      navbar?.classList.remove('shadow-md');
    }
  });
</script>